{
	"compilerOptions": {
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "./lib",
		"target": "es2017",
		"module": "es2020",
		"lib": [
			"es2020",
			"dom"
		],
		"experimentalDecorators": true,
		"declaration": true,
		"moduleResolution": "node",
		"strict": true,
		"allowJs": true,
		"checkJs": false,
		"noImplicitAny": false,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
	]
}
